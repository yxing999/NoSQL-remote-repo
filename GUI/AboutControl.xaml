<UserControl x:Class="WpfApp1.AboutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <!-- 
  ///////////////////////////////////////////////////////////////////////
  // AboutControl.xaml - Control GUI to display message in About tab   //
  // ver 1.0                                                           //
  // Jim Fawcett, CSE687 - Object Oriented Design, Spring 2018         //
  ///////////////////////////////////////////////////////////////////////
-->
    <Grid>
    <FlowDocumentScrollViewer Grid.Row="1" BorderThickness="1" BorderBrush="Black" IsToolBarVisible="False" VerticalScrollBarVisibility="Auto" Margin="10 0" >
      <FlowDocument Name="AboutView" FontFamily="Consolas" FontSize="12" PageWidth="800" Background="#fff" PagePadding="10 0">
        <Paragraph Name="main" Margin="0">
          <TextBlock TextWrapping="NoWrap" Margin="0"></TextBlock>
        </Paragraph>
      </FlowDocument>
    </FlowDocumentScrollViewer>
  </Grid>
</UserControl>
